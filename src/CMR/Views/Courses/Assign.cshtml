@model CMR.ViewModels.AssignViewModel
@{
    ViewBag.Title = "Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/Home">Home</a></li>
    <li><a href="/Courses">Course</a></li>
    <li class="active">Assign</li>
</ol>
<div class="panel panel-default">
    <div class="panel-heading">Assign staff for @Model.Course.Code - @Model.Course.Name</div>
    <div class="panel-body">


        @{
            string message = TempData["message"] as string;
            if (message != null)
            {
                <div class="alert alert-success" role="alert">@message</div>
            }
        }

        <h4>Assign Course</h4>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group col-md-3">
                    <p>Course Leader</p>
                    @Html.DropDownList("cl",
                Model.Staffs.Select(u => new SelectListItem
                {
                    Text = u.UserName,
                    Value = u.Id
                }),
                "Please select", new { @class = "form-control" })
                </div>
                <div class="form-group col-md-3">
                    <p>Course Manager</p>
                    @Html.DropDownList("cm",
                Model.Staffs.Select(u => new SelectListItem
                {
                    Text = u.UserName,
                    Value = u.Id
                }),
                "Please select", new { @class = "form-control" })
                </div>

            </div>
            <div class="row">
                <div class="form-group col-md-12">Academic Year</div>
                <div class="form-group col-md-3">
                    <input type="number" class="form-control" name="start" id="start" placeholder="Start" />
                </div>
                <div class="form-group col-md-3">
                    <input type="number" class="form-control" name="end" id="end" placeholder="End" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <input type="submit" value="Assign" class="btn btn-success pull-left" />
                </div>
            </div>
        }

        <h4>Course Leaders</h4>

        <table class="table table-striped">
            <tr>
                <th>Academic Year</th>
                <th>Course Leader</th>
                <th>Course Manager</th>
            </tr>
            @if (Model.Course.Managers.Any())
            {
                var years = Model.Course.Managers.OrderBy(m => m.Start.Year).GroupBy(m => m.Start.Year);

                foreach (var year in years)
                {
                    <tr>
                        <td>@year.First().Start.Year - @year.First().End.Year</td>
                        @foreach (var item in year)
                        {
                            
                            if (item.Role == "cl")
                            {
                                <td>@item.Manager.UserName</td>
                            }
                            if (item.Role == "cm")
                            {
                                <td>@item.Manager.UserName</td>
                            }

                        }
                    </tr>
                }
            }
        </table>
    </div>
</div>

@model CMR.Models.Course

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="/Home/Index">Home</a></li>
    <li><a href="/Courses">Course</a></li>
    <li class="active">Detail</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        @Html.DisplayFor(model => model.Name)
        <a href="@Url.Action("Edit", new {id=Model.Id})" class="btn btn-warning pull-right btn-top-up">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <a href="@Url.Action("Delete", new {id=Model.Id})" class="btn btn-danger pull-right btn-top-up">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </a>
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Code): </label>
                <span>@Html.DisplayFor(model => model.Code)</span>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Name): </label>
                <span>@Html.DisplayFor(model => model.Name)</span>
            </div>
        </form>
    </div>
</div>


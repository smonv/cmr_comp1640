@model IEnumerable<CMR.Models.Course>

    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <ol class="breadcrumb">
        <li><a href="/Home/Index">Home</a></li>
        <li><a href="/Course/Index">Course</a></li>
        <li class="active">List</li>
    </ol>

    <div class="panel panel-default">
        <div class="panel-heading">
            List Courses 
            @Html.ActionLink("Add New", "Create",new{}, new{@class ="pull-right"})
        </div>
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Manager</th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Managers.Any())
                    {
                    foreach (var ca in item.Managers)
                    {
                    <p>@ca.Role : @ca.Manager.UserName</p>
                    }
                    }
                </td>

                <td style="max-width: 180px;">
                    <a href="@Url.Action("Delete", new {id=item.Id})" class="btn btn-danger pull-right">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Edit", new {id=item.Id})" class="btn btn-warning pull-right">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Assign", new {id=item.Id})" class="btn btn-primary pull-right">
                        Assign
                    </a>
                    <a href="@Url.Action("Details", new {id=item.Id})" class="btn btn-info pull-right">
                        More
                    </a>
                </td>
            </tr>
            }

        </table>
    </div>
  
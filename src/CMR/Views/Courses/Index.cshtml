@model IEnumerable<CMR.Models.Course>

    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <ol class="breadcrumb">
        <li><a href="/Home/Index">Home</a></li>
        <li><a href="/Course/Index">Course</a></li>
        <li class="active">List</li>
    </ol>

    <div class="panel panel-default">
        <div class="panel-heading">
            List Courses 
            @Html.ActionLink("Add New", "Create",new{}, new{@class ="pull-right"})
        </div>
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="hidden-xs">Action</th>
            </tr>

            @foreach (var item in Model) {
            <tr>
                <td>
                    <a href="@Url.Action("Details", new {id=item.Id})">
                        @Html.DisplayFor(modelItem => item.Code)
                    </a>
                </td>
                <td >
                    <a href="@Url.Action("Details", new {id=item.Id})">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td class="hidden-xs">
                    <a href="@Url.Action("Delete", new {id=item.Id})" class="btn btn-danger pull-right">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Edit", new {id=item.Id})" class="btn btn-warning pull-right">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Details", new {id=item.Id})" class="btn btn-info pull-right">
                        More
                    </a>
                </td>
            </tr>
            }

        </table>
    </div>
  
@model CMR.ViewModels.ChangeRoleViewModel
@{
    ViewBag.Title = "ChangeRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ChangeRole: @Model.User.UserName</h2>

<div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
        <form method="post" action="@Url.Action("ChangeRole", "Account", new {id = Model.User.Id})">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <select name="role" class="form-control">
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Id" @Html.Raw(Model.User.Roles.Any(r => r.RoleId == role.Id) ? "selected" : "")>@role.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>


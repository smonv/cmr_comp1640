@model IEnumerable<CMR.Models.Report>

    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <ol class="breadcrumb">
        <li><a href="/Home">Home</a></li>
        <li><a href="/Reports">Reports</a></li>
        <li class="active">List Reports</li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">List reports</div>
        <div class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td style="max-width: 120px;">
                        <a href="@Url.Action(" Delete", new {id=item.Id})" class="btn btn-danger pull-right">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Edit", new {id=item.Id})" class="btn btn-warning pull-right">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action(" Details", new {id=item.Id})" class="btn btn-info pull-right">
                            More
                        </a>
                    </td>
                </tr>
                }

            </table>

        </div>
    </div>

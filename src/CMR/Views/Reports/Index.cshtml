@model IEnumerable<CMR.Models.Report>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
    <li><a href="@Url.Action("Index", "Reports")">Reports</a></li>
    <li class="active">List Reports</li>
</ol>
<div class="panel panel-default">
    <div class="panel-heading">List reports</div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Academic Session</td>
                    <td>Approved</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Assignment.Course.Code - @item.Assignment.Course.Name</td>
                        <td>@item.Assignment.Start.Year - @item.Assignment.End.Year</td>
                        <td>@(item.IsApproved ? "Yes" : "No")</td>
                        <td style="max-width: 120px;">
                            <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-warning pull-right">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-info pull-right">
                                More
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

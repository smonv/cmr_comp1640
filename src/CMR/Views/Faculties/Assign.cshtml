@model CMR.ViewModels.FacultyAssignmentModel
@{
    ViewBag.Title = "Assign Faculty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string message = TempData["message"] as string;
    if (message != null)
    {
<p>@message</p>
    }
}

<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        <div class="col-xs-3">
            <div class="row">

                <div class="form-group">
                    @Html.DropDownList("staff",
                    Model.Staffs.Select(u => new SelectListItem
                    {
                    Text = u.UserName,
                    Value = u.Id
                    }),
                    "Please select staff", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="row">
                <div class="form-group">
                    @Html.DropDownList("role", new SelectList(
                    new List<Object>
                        {
                        new { value = "pvc", text = "Pro-Vice Chancellor"},
                        new {value = "dlt", text = "Director of Learning and Quality"}
                        }, "value", "text"), "Please select role", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Assign" class="btn btn-success pull-right" />
        </div>
        }
    </div>
</div>
@model IEnumerable<CMR.Models.Faculty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>
        <a href="@Url.Action("Index", "Home")">Home</a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Faculties")">Faculties</a>
    </li>
    <li class="active">List</li>
</ol>
<div class="panel panel-default">
    <div class="panel-heading">
        List Faculties
        @Html.ActionLink("Add New", "Create", new {}, new {@class = "pull-right"})
    </div>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>PVC</th>
            <th>DLT</th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @foreach (var fa in item.FacultyAssignment)
                    {
                        if (fa.Managers.Any(m => m.Role == "pvc"))
                        {
                            var pvc = fa.Managers.Single(m => m.Role == "pvc");
                            <p>@pvc.User.UserName</p>
                        }
                        else
                        {
                            <p></p>
                        }
                    }
                </td>
                <td>
                    @foreach (var fa in item.FacultyAssignment)
                    {
                        if (fa.Managers.Any(m => m.Role == "dlt"))
                        {
                            var dlt = fa.Managers.Single(m => m.Role == "dlt");
                            <p>@dlt.User.UserName</p>
                        }
                        else
                        {
                            <p></p>
                        }
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-warning"})
                    @Html.ActionLink("Assign", "Details", new {id = item.Id}, new {@class = "btn btn-info"}) 
                </td>
            </tr>
        }

    </table>
</div>